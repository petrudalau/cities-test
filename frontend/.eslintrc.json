{
  "plugins": [
    "react", "react-hooks"
  ],
  "extends": [
    "eslint:recommended",
    "google",
    "react-app",
    "plugin:react/recommended"
  ],
  "env": {
    "es6": true,
    "browser": true
  },
  "parser": "@babel/eslint-parser",
  "rules": {
    "react/jsx-closing-tag-location": "off",
    "jsx-a11y/alt-text": "off",
    "react/require-default-props": "off",
    "new-cap": "off",
    "react/forbid-prop-types": "off",
    "max-len": ["error", 120, 2, {
      "ignoreUrls": true,
      "ignoreComments": false
    }]
  }
}